extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h3.w3-left New Student Form
    
      body
        form.w3-container(action='/students' ,method="POST")
            ul
                li Name:
                    input.w3-input.w3-border.w3-light-grey(type="text", name="name")
                li Number:
                    input.w3-input.w3-border.w3-light-grey(type="text", name="number")
                li Git: 
                    input.w3-input.w3-border.w3-light-grey(type="text", name="git")
                li TPC: 
                ol
                    li
                        input.w3-check(type="checkbox", name="tpc1")
                    li
                        input.w3-check(type="checkbox", name="tpc2")
                    li
                        input.w3-check(type="checkbox", name="tpc3")
                    li
                        input.w3-check(type="checkbox", name="tpc4")
                    li
                        input.w3-check(type="checkbox", name="tpc5")
                    li
                        input.w3-check(type="checkbox", name="tpc6")
                    li
                        input.w3-check(type="checkbox", name="tpc7")
                    li
                        input.w3-check(type="checkbox", name="tpc8")
            input.w3-btn.w3-blue-grey.w3-margin(type='submit', value='Submit')
            input.w3-btn.w3-blue-grey.w3-margin(type='reset', value='Reset')
      footer.w3-container.w3-teal
        address Gerado por dawApp :: 2020-Nov
        address
            a(href='http://localhost:7700/students') Return to Main Page

  
